<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="container">
      <div class="row logout">
        <p class="text-end">Hola !
          <a href="/admin/login" class="btn btn-danger">Cerrar Sesion</a>
        </p>
      </div>
      <div class="row">
        <div class="col-7">
          <h3>Listado de Novedades</h3>
        </div>
        <div class="col-5 text-end">
          <a href="/admin/novedades/agregar" class="btn btn-success">
            <i class="fa fa-plus" aria-hidden="true">Nuevo</i>
          </a>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <table class="table">
            <thead>
              <tr class="table-dark">
                <th scope="col">#</th>
                <th scope="col">Producto</th>
                <th scope="col">Imagen</th>
                <th class="text-end">Acciones</th>
            </thead>
            <tbody>
              {{#each novedades}}
                <tr>
                  <th scope="row">{{ID_novedad}}</th>
                  <td>{{titulo}}</td>
                  <td>{{{imagen}}}</td>
                  <td class="text-end">
                    <a href="/admin/novedades/modificar/{{ID_novedad}}" class="btn btn-secondary">
                      <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <a href="/admin/novedades/eliminar/{{ID_novedad}}" class="btn btn-secondary">
                      <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://kit.fontawesome.com/5735417465.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>