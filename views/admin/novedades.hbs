<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <div class="container p-3">
      <h2 class="text-center">Novedades</h2>
      <div class="row">
        <div class="col-6">
          <a href="/admin/novedades/agregar" class="btn btn-primary text-start">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Nuevo
          </a>
        </div>
        <div class="col-6">
          <p class="text-end">Hola !
            <a href="/admin/login" class="btn btn-danger">Cerrar Sesion</a>
          </p>
        </div>
      </div>
      <table class="table">
        <thead>
          <tr class="table-success">
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Imagen</th>
            <th scope="col" class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
            <tr>
              <th scope="row">{{id}}</th>
              <td>{{titulo}}</td>
              <td>{{{imagen}}}</td>
              <td class="text-end">
                <a
                  href="/admin/novedades/modificar/{{id}}"
                  class="btn btn-dark"
                >
                  <i class="fa fa-pencil" aria-hidden="true"></i>
                </a>
                <a
                  href="/admin/novedades/eliminar/{{id}}"
                  class="btn btn-danger"
                >
                  <i class="fa fa-trash" aria-hidden="true"></i>
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <script
      src="https://kit.fontawesome.com/5735417465.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>