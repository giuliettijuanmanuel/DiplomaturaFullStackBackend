<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Full Slab</title>
    <link rel="stylesheet" href="/stylesheets/frontstyles.css" />
  </head>
  <body>
    <div class="container">
      <h3>Iniciar Sesión</h3>
      <form action="/admin/login" method="post">
        <label for="inputEmail3">Email</label>
        <input type="email" id="inputEmail3" name="email" />
        <label for="inputPassword3">Contraseña</label>
        <input type="password" id="inputPassword3" name="password" />
        <button type="submit" class="button">Ingresar</button>
      </form>
      {{#if error}}
        <p>Usuario y/o contraseña incorrectos</p>
      {{/if}}
    </div>
    <script
      src="https://kit.fontawesome.com/5735417465.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>