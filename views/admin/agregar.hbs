<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <title>Full Slab</title>
  </head>
  <body>
    <div class="container mt-5">
      <div class="row">
        <div class="col">
          <h3 class="text-center">Agregar Novedad</h3>
          <form
            action="/admin/novedades/agregar"
            method="post"
            class="mx-auto"
            enctype="multipart/form-data"
          >
            <div class="row mb-3">
              <label class="col-form-label">Titulo</label>
              <input type="text" class="form-control" name="titulo" />
            </div>
            <div class="row mb-3">
              <label class="col-form-label">Subtitulo</label>
              <textarea
                name="subtitulo"
                class="form-control"
                type="text"
              ></textarea>
            </div>
            <div class="row mb-3">
              <label class="col-form-label">Cuerpo</label>
              <textarea
                name="cuerpo"
                class="form-control"
                type="text"
              ></textarea>
            </div>
            <div class="row mb3">
              <div class="form-group">
                <label>Imagen:
                  <input type="file" name="imagen" id="imagen" /></label>
              </div>
            </div>
            <button type="submit" class="btn btn-success mt-4">Agregar</button>
          </form>
          {{#if error}}
            <p class="text-danger">{{message}}</p>
          {{/if}}
        </div>
      </div>
    </div>
    <script
      src="https://kit.fontawesome.com/5735417465.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>